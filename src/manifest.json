{
  "manifest_version": 3,
  "name": "Project Nexus",
  "version": "1.0.0",
  "description": "Your digital second brain, synced in silence.",
  "permissions": ["storage", "tabs", "activeTab", "scripting"],
  "host_permissions": ["https://api.github.com/*", "https://gist.github.com/*"],
  "action": {
    "default_title": "Project Nexus",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },

  "commands": {
    "open_nexus": {
      "suggested_key": {
        "default": "Alt+X",
        "mac": "Alt+X"
      },
      "description": "Open Nexus Dashboard"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval' 'unsafe-eval' http://localhost:*; worker-src 'self' blob: http://localhost:*; object-src 'self'"
  }
}
